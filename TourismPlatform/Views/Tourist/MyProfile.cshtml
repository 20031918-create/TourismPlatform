@model TourismPlatform.Models.Tourist

@{
    ViewBag.Title = "My Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>My Profile</h2>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}

@using (Html.BeginForm("MyProfile", "Tourist", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    @Html.HiddenFor(m => m.Id)

    <div class="form-group">
        <label>Full Name</label>
        <input class="form-control" value="@(Model.User != null ? Model.User.FullName : "")" disabled />
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.ContactNumber)
        @Html.TextBoxFor(m => m.ContactNumber, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Nationality)
        @Html.TextBoxFor(m => m.Nationality, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.DateOfBirth)
        @Html.TextBoxFor(m => m.DateOfBirth, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.ProfileImageUrl)
        @Html.TextBoxFor(m => m.ProfileImageUrl, new { @class = "form-control" })
    </div>

    <hr />
    <h4>Additional Information</h4>

    <div class="form-group">
        @Html.LabelFor(m => m.Address)
        @Html.TextBoxFor(m => m.Address, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.City)
        @Html.TextBoxFor(m => m.City, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.EmergencyContactName)
        @Html.TextBoxFor(m => m.EmergencyContactName, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.EmergencyContactPhone)
        @Html.TextBoxFor(m => m.EmergencyContactPhone, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.PassportNumber)
        @Html.TextBoxFor(m => m.PassportNumber, new { @class = "form-control" })
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
}
