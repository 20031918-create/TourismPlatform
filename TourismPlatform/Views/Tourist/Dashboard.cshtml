@model TourismPlatform.Models.Tourist
@{
    ViewBag.Title = "Tourist Dashboard";
}

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col">
            <h2 class="fw-bold">
                <i class="fas fa-compass"></i> Welcome, @Model.User.FullName
            </h2>
            <p class="text-muted">Plan your next adventure</p>
        </div>
        <div class="col-auto">
            <a href="@Url.Action("Index", "TourPackage")" class="btn btn-primary">
                <i class="fas fa-search"></i> Browse Tours
            </a>
        </div>
    </div>

    <!-- Statistics Cards -->
    <div class="row g-4 mb-4">
        <div class="col-md-3">
            <div class="stat-card">
                <h3>@ViewBag.TotalBookings</h3>
                <p><i class="fas fa-ticket-alt"></i> Total Bookings</p>
            </div>
        </div>
        <div class="col-md-3">
            <div class="stat-card success">
                <h3>@ViewBag.UpcomingBookings</h3>
                <p><i class="fas fa-calendar-check"></i> Upcoming Tours</p>
            </div>
        </div>
        <div class="col-md-3">
            <div class="stat-card info">
                <h3>@ViewBag.CompletedBookings</h3>
                <p><i class="fas fa-check-circle"></i> Completed Tours</p>
            </div>
        </div>
        <div class="col-md-3">
            <div class="stat-card warning">
                <h3>@ViewBag.TotalSpent.ToString("C")</h3>
                <p><i class="fas fa-dollar-sign"></i> Total Spent</p>
            </div>
        </div>
    </div>

    <div class="row g-4">
        <!-- Recent Bookings -->
        <div class="col-lg-8">
            <div class="card">
                <div class="card-header bg-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0"><i class="fas fa-list"></i> My Recent Bookings</h5>
                    <a href="@Url.Action("MyBookings")" class="btn btn-sm btn-outline-primary">View All</a>
                </div>
                <div class="card-body">
                    @if (ViewBag.RecentBookings != null && ViewBag.RecentBookings.Count > 0)
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Package</th>
                                        <th>Date</th>
                                        <th>Participants</th>
                                        <th>Amount</th>
                                        <th>Status</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var booking in ViewBag.RecentBookings)
                                    {
                                        <tr>
                                            <td>
                                                <strong>@booking.TourPackage.PackageName</strong><br>
                                                <small class="text-muted">@booking.TourPackage.Destination</small>
                                            </td>
                                            <td>@booking.BookingDate.ToString("dd MMM yyyy")</td>
                                            <td>@booking.NumberOfParticipants</td>
                                            <td>@booking.TotalAmount.ToString("C")</td>
                                            <td>
                                                @if (booking.BookingStatus == "Confirmed")
                                                {
                                                    <span class="badge bg-success">@booking.BookingStatus</span>
                                                }
                                                else if (booking.BookingStatus == "Pending")
                                                {
                                                    <span class="badge bg-warning">@booking.BookingStatus</span>
                                                }
                                                else if (booking.BookingStatus == "Completed")
                                                {
                                                    <span class="badge bg-info">@booking.BookingStatus</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">@booking.BookingStatus</span>
                                                }
                                            </td>
                                            <td>
                                                <a href="@Url.Action("Details", "Booking", new { id = booking.Id })" class="btn btn-sm btn-outline-primary">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
                            <p class="text-muted">No bookings yet. Start exploring!</p>
                            <a href="@Url.Action("Index", "TourPackage")" class="btn btn-primary">
                                Browse Tour Packages
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Quick Actions & Profile -->
        <div class="col-lg-4">
            <div class="card">
                <div class="card-header bg-white">
                    <h5 class="mb-0"><i class="fas fa-bolt"></i> Quick Actions</h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-3">
                        <a href="@Url.Action("Index", "TourPackage")" class="btn btn-primary">
                            <i class="fas fa-search"></i> Browse Tours
                        </a>
                        <a href="@Url.Action("MyBookings")" class="btn btn-outline-primary">
                            <i class="fas fa-list"></i> My Bookings
                        </a>
                        <a href="@Url.Action("Profile")" class="btn btn-outline-primary">
                            <i class="fas fa-user-edit"></i> Edit Profile
                        </a>
                    </div>
                </div>
            </div>

            <div class="card mt-4">
                <div class="card-header bg-white">
                    <h5 class="mb-0"><i class="fas fa-user-circle"></i> Profile Info</h5>
                </div>
                <div class="card-body">
                    @if (!string.IsNullOrEmpty(Model.ProfileImageUrl))
                    {
                        <div class="text-center mb-3">
                            <img src="@Model.ProfileImageUrl" alt="Profile" class="profile-image">
                        </div>
                    }
                    <p><strong>Email:</strong> @Model.User.Email</p>
                    @if (!string.IsNullOrEmpty(Model.ContactNumber))
                    {
                        <p><strong>Contact:</strong> @Model.ContactNumber</p>
                    }
                    @if (!string.IsNullOrEmpty(Model.Nationality))
                    {
                        <p><strong>Nationality:</strong> @Model.Nationality</p>
                    }
                    <p class="mb-0"><strong>Member Since:</strong> @Model.RegistrationDate.ToString("MMM yyyy")</p>
                </div>
            </div>

            <div class="card mt-4">
                <div class="card-header bg-white">
                    <h5 class="mb-0"><i class="fas fa-lightbulb"></i> Travel Tips</h5>
                </div>
                <div class="card-body">
                    <ul class="list-unstyled mb-0">
                        <li class="mb-2"><i class="fas fa-check text-success"></i> Book early for better deals</li>
                        <li class="mb-2"><i class="fas fa-check text-success"></i> Check travel requirements</li>
                        <li class="mb-2"><i class="fas fa-check text-success"></i> Review tour details carefully</li>
                        <li class="mb-0"><i class="fas fa-check text-success"></i> Leave feedback after tours</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>