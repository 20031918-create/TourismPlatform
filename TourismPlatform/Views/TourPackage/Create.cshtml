@model TourismPlatform.Models.Booking

@{
    ViewBag.Title = "Book Tour";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var tour = ViewBag.Tour as TourismPlatform.Models.TourPackage;
}

<div class="container mt-5">
    <h2 class="fw-bold mb-4">Book Tour</h2>

    @if (tour != null)
    {
        <div class="card shadow-sm mb-4">
            <div class="card-body">
                <h4 class="card-title">@tour.PackageName</h4>
                <p class="text-muted mb-1"><i class="fas fa-map-marker-alt"></i> @tour.Destination</p>
                <p class="mb-1"><strong>Price per person:</strong> @tour.PricePerPerson.ToString("C")</p>
                <p class="mb-0"><strong>Available slots:</strong> @tour.AvailableSlots</p>
            </div>
        </div>
    }

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        @* keep the selected package *@
        @Html.HiddenFor(m => m.TourPackageId)

        <div class="mb-3">
            @Html.LabelFor(m => m.NumberOfParticipants, new { @class = "form-label fw-semibold" })
            @Html.TextBoxFor(m => m.NumberOfParticipants, new { @class = "form-control", type = "number", min = "1", max = "50" })
            @Html.ValidationMessageFor(m => m.NumberOfParticipants, "", new { @class = "text-danger" })
        </div>

        <div class="mb-3">
            @Html.LabelFor(m => m.SpecialRequests, new { @class = "form-label fw-semibold" })
            @Html.TextAreaFor(m => m.SpecialRequests, 4, 50, new { @class = "form-control", placeholder = "Any special requests (optional)..." })
            @Html.ValidationMessageFor(m => m.SpecialRequests, "", new { @class = "text-danger" })
        </div>

        @* TotalAmount is calculated server-side. Show it but don’t let user edit it *@
        <div class="mb-3">
            <label class="form-label fw-semibold">Total Amount</label>
            <input class="form-control" value="@Model.TotalAmount.ToString("C")" readonly />
        </div>

        <button type="submit" class="btn btn-primary btn-lg">
            Confirm Booking
        </button>

        <a href="@Url.Action("Details", "TourPackage", new { id = Model.TourPackageId })"
           class="btn btn-outline-secondary btn-lg ms-2">
            Cancel
        </a>
    }
</div>
