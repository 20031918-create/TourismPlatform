@model TourismPlatform.Models.Booking

@{
    ViewBag.Title = "Booking Confirmation";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="card shadow-sm">
        <div class="card-body">
            <h2 class="fw-bold text-success mb-3">
                <i class="fas fa-check-circle"></i> Booking Confirmed!
            </h2>

            <p class="mb-1"><strong>Booking ID:</strong> @Model.Id</p>
            <p class="mb-1"><strong>Package:</strong> @Model.TourPackage?.PackageName</p>
            <p class="mb-1"><strong>Participants:</strong> @Model.NumberOfParticipants</p>
            <p class="mb-1"><strong>Total Amount:</strong> @Model.TotalAmount.ToString("C")</p>
            <p class="mb-3"><strong>Status:</strong> @Model.BookingStatus</p>

            <a class="btn btn-primary" href="@Url.Action("Dashboard", "Tourist")">
                Go to Dashboard
            </a>

            <a class="btn btn-outline-secondary ms-2" href="@Url.Action("Index", "TourPackage")">
                Browse More Tours
            </a>
        </div>
    </div>
</div>
