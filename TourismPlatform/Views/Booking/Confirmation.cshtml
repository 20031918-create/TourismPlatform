@model TourismPlatform.Models.Booking

@{
    ViewBag.Title = "Booking Confirmation";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="card shadow-sm">
        <div class="card-body">
            <h2 class="fw-bold text-success mb-3">Booking Confirmed!</h2>
            <p class="text-muted mb-4">Your booking has been successfully created.</p>

            <hr />

            <h4 class="fw-bold">@Model.TourPackage.PackageName</h4>
            <p class="text-muted">
                <i class="fas fa-map-marker-alt"></i> @Model.TourPackage.Destination
            </p>

            <p><strong>Participants:</strong> @Model.NumberOfParticipants</p>
            <p><strong>Total Amount:</strong> @Model.TotalAmount.ToString("C")</p>
            <p><strong>Status:</strong> @Model.BookingStatus</p>
            <p><strong>Payment:</strong> @Model.PaymentStatus</p>
            <p><strong>Booked on:</strong> @Model.BookingDate.ToString("dd MMM yyyy, hh:mm tt")</p>

            <hr />

            <a href="@Url.Action("Index", "TourPackage")" class="btn btn-primary">
                Back to Tours
            </a>
        </div>
    </div>
</div>
