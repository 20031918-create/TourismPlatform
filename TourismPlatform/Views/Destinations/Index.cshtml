@{
    ViewBag.Title = "Destinations";
}

<div class="container mt-5">
    <h2 class="text-center mb-4 fw-bold">Explore Our Top Destinations</h2>

    <div class="row g-4">

        <!-- Sydney -->
        <div class="col-md-4">
            <div class="card shadow-lg h-100 border-0 rounded-4">
                <img src="~/Images/Sydney.jpg" class="card-img-top rounded-top-4" style="height:220px; object-fit:cover;" />
                <div class="card-body text-center">
                    <h5 class="fw-bold">Sydney</h5>
                    <p class="text-muted">Harbour city with beaches and iconic landmarks</p>
                    <a href="@Url.Action("Details", "Destinations", new { id = 1 })" class="btn btn-primary rounded-pill px-4">View Details</a>
                </div>
            </div>
        </div>

        <!-- Newcastle -->
        <div class="col-md-4">
            <div class="card shadow-lg h-100 border-0 rounded-4">
                <img src="~/Images/Newcastle.jpg" class="card-img-top rounded-top-4" style="height:220px; object-fit:cover;" />
                <div class="card-body text-center">
                    <h5 class="fw-bold">Newcastle</h5>
                    <p class="text-muted">Coastal beauty with surfing beaches</p>
                    <a href="@Url.Action("Details", "Destinations", new { id = 2 })" class="btn btn-primary rounded-pill px-4">View Details</a>
                </div>
            </div>
        </div>

        <!-- Perth -->
        <div class="col-md-4">
            <div class="card shadow-lg h-100 border-0 rounded-4">
                <img src="~/Images/Perth.jpg" class="card-img-top rounded-top-4" style="height:220px; object-fit:cover;" />
                <div class="card-body text-center">
                    <h5 class="fw-bold">Perth</h5>
                    <p class="text-muted">Sunny city with rivers and beaches</p>
                    <a href="@Url.Action("Details", "Destinations", new { id = 3 })" class="btn btn-primary rounded-pill px-4">View Details</a>
                </div>
            </div>
        </div>

    </div>
</div>
