@model TourismPlatform.Models.Destination

@{
    ViewBag.Title = "Destination Details";
}

<h2>@Model.Name</h2>

@if (!string.IsNullOrWhiteSpace(Model.ImageUrl))
{
    <div style="margin: 10px 0;">
        <img src="@Url.Content(Model.ImageUrl)"
             alt="@Model.Name"
             style="max-width: 100%; height: auto; border: 1px solid #ddd; padding: 4px;" />
    </div>
}

<p>@Model.Description</p>

@if (!string.IsNullOrWhiteSpace(Model.Attractions))
{
    <h4>Attractions</h4>
    <p>@Model.Attractions</p>
}

<h4>Tour Price</h4>
<p>@Model.TourPrice</p>

<p>
    <a class="btn btn-default" href="@Url.Action("Index", "Destinations")">Back to Destinations</a>
</p>
