@model TourismPlatform.Models.Destination

<div class="container mt-5">
    <div class="row g-4">

        <!-- Image -->
        <div class="col-md-6">
            <img src="@Url.Content(Model.ImageUrl)" class="img-fluid rounded-4 shadow" />
        </div>

        <!-- Info -->
        <div class="col-md-6">
            <h2 class="fw-bold">@Model.Name</h2>

            <!-- Rating -->
            <div class="mb-2">
                @for (int i = 0; i < Model.Rating; i++)
                {
                    <span style="color: gold; font-size: 20px;">★</span>
                }
            </div>

            <p class="text-muted">@Model.Description</p>

            <h5 class="mt-3">Top Attractions</h5>
            <p>@Model.Attractions</p>

            <h4 class="text-success fw-bold mt-3">$@Model.TourPrice</h4>

            <a href="#" class="btn btn-danger btn-lg rounded-pill mt-3 px-5">Book Now</a>
        </div>

    </div>
</div>
